{
	"env": {
		"browser": true,
		"es2022": true,
		"node": true,
		"jest": true
	},
	"plugins": [ "compat", "jsdoc" ],
	"extends": [ "eslint:recommended", "plugin:compat/recommended", "plugin:jsdoc/recommended" ],
	"parserOptions": {
		"ecmaVersion": 2022,
		"sourceType": "module"
	},
	"overrides": [],
	"rules": {
		"jsdoc/tag-lines": 0,
		"indent": [
			"error",
			"tab",
			{
				"SwitchCase": 1
			}
		],
		"linebreak-style": [
			"error",
			"unix"
		],
		"quotes": [
			"error",
			"single"
		],
		"semi": [
			"error",
			"always"
		]
	},
	"settings": {
		"jsdoc": {
			"mode": "typescript",
			"preferredTypes": {	"object": "Object" },
			"structuredTags": {	"template": {	"name": "namepath-defining", "type": false } },
			"tagNamePreference": {
				"augments": {
					"message": "@extends is to be used over @augments as it is more evocative of classes than @augments",
					"replacement": "extends"
				}
			}
		}
	}
}